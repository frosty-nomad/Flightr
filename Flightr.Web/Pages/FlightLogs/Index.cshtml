@page
@model Flightr.Web.Pages.FlightLogs.IndexModel
@{
    ViewData["Title"] = "My Flight Logs";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">My Flight Logs</h1>
    <a class="btn btn-primary" asp-page="/FlightLogs/Create">New log</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (Model.Logs.Count == 0)
{
    <div class="alert alert-info">No flight logs yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Aircraft</th>
                    <th>Route</th>
                    <th>Total</th>
                    <th>PIC</th>
                    <th>SIC</th>
                    <th>Night</th>
                    <th>XC</th>
                    <th>Instr</th>
                    <th>Landings</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.FlightDate.ToString("yyyy-MM-dd")</td>
                        <td>@log.AircraftType</td>
                        <td>@log.Route</td>
                        <td>@log.TotalHours</td>
                        <td>@log.PicHours</td>
                        <td>@log.SicHours</td>
                        <td>@log.NightHours</td>
                        <td>@log.CrossCountryHours</td>
                        <td>@log.InstrumentHours</td>
                        <td>@log.LandingsDay + @log.LandingsNight</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-page="/FlightLogs/Edit" asp-route-id="@log.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-page="/FlightLogs/Delete" asp-route-id="@log.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
