@page
@model Flightr.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create account";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h1 class="h3 mb-3">Create account</h1>

        <form method="post" class="card card-body shadow-sm">
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.PilotName" class="form-label"></label>
                <input asp-for="Input.PilotName" class="form-control" />
                <span asp-validation-for="Input.PilotName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.LicenseNumber" class="form-label"></label>
                <input asp-for="Input.LicenseNumber" class="form-control" />
                <span asp-validation-for="Input.LicenseNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.LicenseExpirationDate" class="form-label"></label>
                <input asp-for="Input.LicenseExpirationDate" class="form-control" type="date" />
            </div>
            <div class="mb-3">
                <label asp-for="Input.LicenseGoal" class="form-label"></label>
                <select asp-for="Input.LicenseGoal" class="form-select">
                    <option value="">Select a goal</option>
                    <option value="Sport">Sport</option>
                    <option value="Recreational">Recreational</option>
                    <option value="Private">Private</option>
                    <option value="Commercial">Commercial</option>
                </select>
                <span asp-validation-for="Input.LicenseGoal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="btn btn-primary w-100">Create account</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-page="/Account/Login">Already have an account? Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
